<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/primaryLightColor"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        card_view:cardUseCompatPadding="true"
        android:minHeight="140dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/appointment_box_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appointment_box_business_name"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="...."
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/appointment_box_business_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryTextColor"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />


        </RelativeLayout>


            <TextView
                android:id="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="@color/primaryTextColor"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/appointment_box_business"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/notes"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/secondaryTextColor"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="@color/primaryDarkColor" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
