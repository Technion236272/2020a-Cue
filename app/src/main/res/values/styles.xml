<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnBackground">@color/secondaryTextColor</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:actionMenuTextAppearance">@color/primaryTextColor</item>
    </style>


    <style name="calendarText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">18sp</item>
    </style>
 <style name="openHoursTextStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/fui_transparent</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

</resources>
