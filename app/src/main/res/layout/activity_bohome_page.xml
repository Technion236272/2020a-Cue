<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BOHomePage"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/business_logo"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_person_outline_black_24dp"/>

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Business name"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/business_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="-- Business description --"
        android:layout_below="@id/business_name"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/business_name"
        android:background="@color/ColorSecondaryDark"
        android:src="@drawable/ic_edit_black_24dp"
        android:onClick="editBOHomePage"/>

    <ImageButton
        android:id="@+id/image_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@color/colorPrimaryLight"
        android:src="@drawable/ic_image_black_24dp"
        android:visibility="invisible"
        android:onClick="uploadLogoToFireBase"/>

</RelativeLayout>