<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BOHomePage"
    android:background="@color/colorPrimaryLight">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/business_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <EditText
        android:id="@+id/business_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="26dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/business_description_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/business_name"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="26dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/business_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/business_name"
        android:layout_toRightOf="@id/business_logo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:id="@+id/image_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@color/colorPrimaryLight"
        app:srcCompat="@drawable/ic_image_black_24dp"
        android:visibility="invisible"
        android:onClick="uploadLogoToFireBase"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:layout_alignParentEnd="true"
        android:onClick="editBOHomePage" />

    <TextView
        android:id="@+id/opening_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_logo"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/opening_hours" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_hours"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/address" />

    <View
        android:id="@+id/separation_line"
        android:layout_width="fill_parent"
        android:layout_below="@id/address"
        android:layout_height="2dip"
        android:layout_marginTop="15dp"
        android:background="#44000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separation_line" />

</RelativeLayout>