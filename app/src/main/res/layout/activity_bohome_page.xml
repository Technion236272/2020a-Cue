<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessFeatures.BOBusinessHomePage"
    android:background="@color/colorPrimaryLight">

    <fragment android:name="com.technion.cue.BusinessFeatures.BusinessInfoFragment"
        android:id="@+id/business_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/image_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@color/colorPrimaryLight"
        app:srcCompat="@drawable/ic_image_black_24dp"
        android:visibility="invisible"
        android:onClick="uploadLogoToFireBase"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:layout_alignParentEnd="true"
        android:onClick="editBOHomePage" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/business_calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_perm_contact_calendar_black_24dp"
        android:layout_above="@id/edit_button"
        android:onClick="openBusinessCalendar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/business_info" />

</RelativeLayout>