<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/ColorSecondary</item>
        <item name="colorOnBackground">@color/TextOnBackground</item>
        <item name="colorOnPrimary">@color/TextColorPrimary</item>
        <item name="colorOnSecondary">@color/TextColorSecondary</item>
    </style>


    <style name="calendarText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/TextOnBackground</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="openHoursTextStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/fui_transparent</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->

        <item name="android:textColor">@color/TextOnBackground</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">#FFFFFF</item>

    </style>


<!--    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">-->
