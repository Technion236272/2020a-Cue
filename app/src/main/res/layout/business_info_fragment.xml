<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/business_logo_wrapper"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/business_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_person_outline_black_24dp"
            app:civ_border_color="@color/ColorSecondary"
            app:civ_border_width="4dp"
            android:clickable="false"
            android:onClick="uploadLogoToFireBase" />

        <TextView
            android:id="@+id/upload_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/business_logo"
            android:layout_alignTop="@id/business_logo"
            android:layout_alignRight="@id/business_logo"
            android:layout_alignBottom="@id/business_logo"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="@string/upload_image"
            android:textColor="@color/TextOnBackground"
            android:layout_alignEnd="@id/business_logo"
            android:layout_alignStart="@id/business_logo"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="22sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/homepageBusinessName"
        android:textColor="@color/TextOnBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_toRightOf="@id/business_logo_wrapper"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/homepageBusinessDescription"
        android:textColor="@color/TextOnBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/homepageBusinessName"
        android:layout_toRightOf="@id/business_logo_wrapper"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/opening_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_logo_wrapper"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/opening_hours" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_hours"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/address" />

</RelativeLayout>