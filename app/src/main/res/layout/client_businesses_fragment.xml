<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


            <TextView
                android:id="@+id/no_businesses_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/primaryColor"
                android:text="No Businesses yet."
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"/>


        <FrameLayout
            android:id="@+id/client_business_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/client_homepage_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"
                android:progress="1" />
        </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/business_list"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/myFavoriteList"
                    android:background="#ffffff" >
             </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
</ScrollView>
